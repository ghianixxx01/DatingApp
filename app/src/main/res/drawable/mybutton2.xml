<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#BCD1C5" />
            <gradient android:angle="-90" android:startColor="#3E4140" android:endColor="#A5B8B8"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#889291" />
            <solid android:color="#5C5F5F"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#555050" />
            <gradient android:angle="-90" android:startColor="#464948" android:endColor="#3D3333" />
        </shape>
    </item>
</selector>